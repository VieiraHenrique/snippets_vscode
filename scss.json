	"CSS - Overlay Background": {
		"prefix": "css-overlay-bg",
		"body": [
			"background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(../);"
		],
		"description": "CSS - Overlay Background"
	}

	"CSS - Flex center": {
		"prefix": "css-flex-center",
		"body": [
			"display: flex;",\
			"justify-content: center;",
			"align-items: center;"
		],
		"description": "CSS - Flex center"
	},
	"Media Query": {
		"prefix": "@res",
		"body": [
		  "@media screen and (min-width: 768px){",
		  "",
		  "};"
		],
		"description": "Media Query"
	  },
		"Reset sass": {
			"prefix": "reset",
			"body": [
				"@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap');",
				"",
				"*,",
				"*::before,",
				"*::after {",
				"  margin: 0;",
				"  padding: 0;",
				"  box-sizing: border-box;",
				"  line-height: 1;",
				"}",
				"",
				"html {",
				"  scroll-behavior: smooth;",
				"}",
				"",
				"body {",
				"  font-family: \"Poppins\", sans-serif;",
				"  overflow-x: hidden;",
				"}",
				"",
				"img {",
				"  width: 100%;",
				"}",
				"",
				"ul {",
				"  list-style: none;",
				"}",
				"",
				"a {",
				"  text-decoration: none;",
				"  color: #000;",
				"}",
				"",
				"input,",
				"textarea {",
				"  padding: 1rem;",
				"  border: none;",
				"  outline: none;",
				"}",
				"",
				".container {",
				"  max-width: 1110px;",
				"  margin: 0 auto;",
				"  padding: 0 25px;",
				"",
				"  @media screen and (min-width: 768px) {",
				"    padding: 0;",
				"  }",
				"}"
			],
			"description": "Reset sass"
		}
}